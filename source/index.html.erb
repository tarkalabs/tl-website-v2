<script>
var slideIndex = 1;
var number = 1;
showDivs(slideIndex);

function plusDivs(n) {
    showDivs(slideIndex += n);
    
    if(slideIndex <= 0) {
        number = 1
    } else if(slideIndex === 1) {
       number = slideIndex
    }else {
       number = slideIndex
    };
    
    document.getElementById("count-current").innerHTML = number;
}
function minusDivs(n) {
    showDivs(slideIndex -= n);
    
    if(slideIndex <= 0 || slideIndex === 0) {
        number = 1
    }else {
       number = slideIndex
    };
    
    document.getElementById("count-current").innerHTML = number;
}

function showDivs(n) {
    var i;
    var x = document.getElementsByClassName("testi-quote");
    var y = document.getElementsByClassName("pic");

    document.getElementById("count-total").innerHTML = x.length;
    
    if (n > x.length) {slideIndex = 1}
    if (n > y.length) {slideIndex = 1}
    
    if (n < 1) {slideIndex = x.length}
    if (n < 1) {slideIndex = y.length}
    
    for (i = 0; i < x.length; i++) {
        x[i].style.display = "none";
        y[i].style.display = "none";
    }
    
    x[slideIndex-1].style.display = "inline-block";
    y[slideIndex-1].style.display = "inline-block";
}
    
var tag = document.createElement('script');
var canSubstitutePlayer = false;

tag.src = "https://www.youtube.com/iframe_api";
var firstScriptTag = document.getElementsByTagName('script')[0];
firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);
var player;
function onYouTubeIframeAPIReady() {
  canSubstitutePlayer = true;
}

$(document).ready(function(){
  $('.talk-index .talk-preview img').click(function(){
      $('.talk-index').removeClass('active');
      if(player!==null && player!== undefined) {
        player.destroy()
      }
      var $player = $(this).parents(".talk-preview").find(".ytplayer");
      var node = $player[0];
      var $node = $(node);
      var videoID = $node.data("videoid");
      player = new YT.Player(node, {height: $node.height(), width: $node.width(), videoId: videoID});
      // player = new YT.Player(node, {height: $node.height(), width; $node.width(), videoId: videoID});
      $(this).parents('.talk-index').toggleClass('active');

  });
  $('.talk-index .talk-preview .toggle-btns .talk-next').click(function(){
        console.log("next clicked");
        $(this).parents('.talks').animate( { scrollLeft: '+=900' }, 300);
  });
  $('.talk-index .talk-preview .toggle-btns .talk-prev').click(function(){
        console.log("Prev clicked");
        $(this).parents('.talks').animate( { scrollLeft: '-=900' }, 300);
  });
  plusDivs(getRandom(0,4))
})

function getRandom(min, max) {
    return Math.round(Math.random() * (max - min) + min);
}
</script>